<script>
$(document).ready(function() {

$("p.tweets").each(function() {
	var b = $(this).text();
	var s = b.split(" ");
	var str = '';
	
	jQuery.each(s, function( i, val ) {
		if (val[0] == "#") {
			tr = val.substring(1);
			str += '<a href="show_trends?topic=' + tr + '">' + 
				val + ' </a>';
		} else {
			str += val + ' ';
		}
	});
//	alert(str);
	$(this).html(str);
});

});


</script>
